version=2
@Sound.play(Select)
@Text.show(Welcome to the PokéBank!~Your bank have $<Register.value(System.BankMoney)>.)
@Sound.play(Select)
@Text.show(What would you like to do?~Your game will be saved after transaction.)
@Options.setcancelindex(2)
@Options.show(DEPOSITE,WITHDRAW,CANCEL)
:when:DEPOSITE
	@Sound.play(Select)
	:if:<Player.money>=0
		@Text.show(You have $<Player.money> in your pocket.~you cannot deposite...)
		@Script.start(System\CommonEvent\12\PC\PCOption4)
	:endif
	@Script.start(System\CommonEvent\12\PC\PokéBankDeposite)
:when:WITHDRAW
	@Sound.play(Select)
	:if:<Register.value(System.BankMoney)>=0
		@Text.show(You have $<Player.money> in your bank.~you cannot withdraw...)
		@Script.start(System\CommonEvent\12\PC\PCOption4)
	:endif
	@Script.start(System\CommonEvent\12\PC\PokéBankWithdraw)
:when:CANCEL
	@Script.start(System\CommonEvent\12\PC\PCOption3)
:endwhen
:end
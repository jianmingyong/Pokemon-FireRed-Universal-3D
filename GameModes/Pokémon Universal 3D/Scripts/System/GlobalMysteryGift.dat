version=2
@Text.show(Welcome to Dialga Mystery Gift Transporter.~Game will be saved after a proper redeem.)
@Text.show(Do you want to continue?)
@Options.setcancelindex(1)
@Options.show(YES,NO)
:when:YES
	@Text.show(Please Copy Paste the~random code into the input.)
	@Script.start(Function\Return.False)
	:while:<System.return>=false
		@Screen.input(,0,,999)
		@Text.show(The code you inserted is correct?)
		@Options.setcancelindex(1)
		@Options.show(YES,NO)
		:when:YES
			@Script.start(Function\Return.True)
			@Register.register(<System.lastinput>,int,0)
		:when:NO
		:endwhen
	:endwhile
	@Text.show(Checking for Mystery Gift Data...)
	:if:<Register.registered(QFBva2Vtb24uYWRkKDQ4MywxMDAsQXBwYXJlbnRseSBoYWQgYSBmYXRlZnVsIGVuY291bnRlciwxLGF0IE15c3RlcnkgR2lmdCwwLE15c3RlcnkgR2lmdCkequal)>=true <and> <Register.value(QFBva2Vtb24uYWRkKDQ4MywxMDAsQXBwYXJlbnRseSBoYWQgYSBmYXRlZnVsIGVuY291bnRlciwxLGF0IE15c3RlcnkgR2lmdCwwLE15c3RlcnkgR2lmdCkequal)>=0
		@Pokemon.add(483,100,Apparently had a fateful encounter,1,at Mystery Gift,0,Mystery Gift)
		@Sound.play(success)
		@Text.show(<Player.name> received~Dialga from mystery gift.)
		@Text.show(Thank you for using Dialga Mystery Gift~Transporter.)
		@Register.change(QFBva2Vtb24uYWRkKDQ4MywxMDAsQXBwYXJlbnRseSBoYWQgYSBmYXRlZnVsIGVuY291bnRlciwxLGF0IE15c3RlcnkgR2lmdCwwLE15c3RlcnkgR2lmdCkequal,1)
		@Player.save
		@Sound.play(Save)
		:end
	:endif
	@Text.show(The code you enter is not valid.)
	@Register.unregister(<System.lastinput>)
:when:NO
:endwhen
@Text.show(Thank you for using Dialga Mystery Gift~Transporter.)
:end
version=2
@Text.show(There is a questionnaire.~Would you like to fill it out?)
@Options.setcancelindex(1)
@Options.show(YES,NO)
:when:YES
	@Script.start(Function\Return.False)
	:while:<System.return>=false
		@Screen.input(,0,,35)
		@Text.show(The answer shown below Okay?~<System.lastinput>)
		@Options.setcancelindex(1)
		@Options.show(YES,NO)
		:when:YES
			@Script.start(Function\Return.True)
			:if:<System.lastinput>=LINK TOGETHER WITH ALL
				@NPC.turn(001000002,2)
				@Text.show(Thank you for taking the time to~fill out our questionnaire.*Your feedback will be used for~future reference.)
				@Sound.play(success)
				@Text.show(You have unlocked Mystery Gift feature!~The dialga will operate now.)
				@Register.change(System.MysteryGift,1)
				@Script.start(System\GlobalMain)
			:endif
		:when:NO
		:endwhen
	:endwhile
:when:NO
:endwhen
:end
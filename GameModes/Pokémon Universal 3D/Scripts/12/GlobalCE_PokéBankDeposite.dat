version=2
@Text.show(You have $<Player.money> in your pocket.~How much would you like to deposite?)
:if:<Player.money>>0
	@Screen.input(<Player.money>,0,<Player.money>,10)
:endif
@Text.show(Are you sure you want to deposite~$<Math.clamp(<System.lastinput>,0,<Player.money>)>?)
@Options.setcancelindex(1)
@Options.show(YES,NO)
:when:YES
	:if:<Math.sng(<Register.value(System.BankMoney)>+<Math.clamp(<System.lastinput>,0,<Player.money>)>)>>2147483647
		@Text.show(Too much money inserted into the bank.)
		@Script.start(12\GlobalCE_PokéBankDeposite)
		:end
	:endif
	:if:<Player.money><<Math.clamp(<System.lastinput>,0,<Player.money>)>
		@Text.show(You do not have that much money.)
		@Script.start(12\GlobalCE_PokéBankDeposite)
		:end
	:endif
	:if:<Math.clamp(<System.lastinput>,0,<Player.money>)>=0
		@Text.show(Deposite canceled.)
		@Script.start(12\GlobalCE_PCOption4)
		:end
	:endif
	@Player.addmoney(-<Math.clamp(<System.lastinput>,0,<Player.money>)>)
	@Register.change(System.BankMoney,<Register.value(System.BankMoney)>+<Math.clamp(<System.lastinput>,0,<Player.money>)>)
	@Player.save
	@Sound.play(Save)
	@Text.show(You have deposited successfully.)
	@Script.start(12\GlobalCE_PCOption4)
:when:NO
	@Script.start(12\GlobalCE_PokéBankDeposite)
:endwhen
:end
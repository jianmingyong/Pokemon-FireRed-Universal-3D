##############################
# Sub Security.FileValidation
##############################

@Storage.set(str,StackTrace.Set,Class\Security\FileValidation.dat)
@Script.start(Class\StackTrace\Set)

@Storage.set(int,Security.FileValidation.CurrentIndex,1)

# Insert a list of core script to check
# All File have to return the value from a storage to valid the script have been called.
# List of script in ascending order.

@Storage.set(str,Security.FileExists,Class\Error\GenerateLog)
@Script.start(Class\Security\FileExists)

@Storage.set(str,Security.FileExists,Class\Error\ID -1)
@Script.start(Class\Security\FileExists)

@Storage.set(str,Security.FileExists,Class\Error\ID 1)
@Script.start(Class\Security\FileExists)

# End of File Validation
:if:<Storage.get(int,Security.FileValidation.CurrentIndex)>>1
	# Trigger Crash
	
	@Script.start(Class\Error\ID 1)
:endif

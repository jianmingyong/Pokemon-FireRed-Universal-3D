version=2
##############################
# Sub Screen.IntroScreen
##############################

@Storage.set(str,StackTrace.Set,Version\2\Class\Screen\Pokémon Delta Emerald\IntroScreen.dat)
@Script.start(Version\2\Class\StackTrace\Set)

:if:<Storage.get(bool,Security.FileValidation.Checks)>=true
	@Storage.set(bool,Security.FileValidation.ScriptExist,true)
	:end
:endif

:while:<Entity.opacity(1)>>0
	@Entity.setopacity(1,<Entity.opacity(1)>-10)
	@Level.wait(1)
	@Level.update
:endwhile
:while:<Entity.opacity(11)><100
	@Entity.setopacity(11,<Entity.opacity(11)>+10)
	@Level.wait(1)
	@Level.update
:endwhile
:while:<Entity.opacity(12)><100
	@Entity.setopacity(12,<Entity.opacity(12)>+10)
	@Level.wait(1)
	@Level.update
:endwhile
:while:<Entity.opacity(13)><100
	@Entity.setopacity(13,<Entity.opacity(13)>+10)
	@Level.wait(1)
	@Level.update
:endwhile

@Music.play(<Storage.get(str,GameMode.IntroMusic)>)
@Text.show(Hi! Sorry to keep you waiting!*Welcome to the world of POKéMON!*My name is BIRCH.*But everyone calls me the POKéMON~PROFESSOR.)

:while:<Entity.opacity(14)><100
	@Entity.setopacity(14,<Entity.opacity(14)>+10)
	@Level.wait(1)
	@Level.update
:endwhile

@Pokemon.cry(270)
@Text.show(This is what we call a "POKéMON."*This world is widely inhabited by~creatures known as POKéMON.*We humans live alongside POKéMON,~at times as friendly playmates, and~at times as cooperative workmates.*And sometimes, we band together~and battle others like us.*But despite our closeness, we don't~know everything about POKéMON.*In fact, there are many, many~secrets surrounding POKéMON.*To unravel POKéMON mysteries,~I've been undertaking research.*That's what I do.*And you are?*Are you a boy?~Or are you a girl?)

@Options.show(BOY,GIRL)
	:when:BOY
		@Register.change(Pokémon Delta Emerald.Player.Gender,Boy)
		@Player.wearskin(Brendan)
		@Player.setrivalname(May)
	:when:GIRL
		@Register.change(Pokémon Delta Emerald.Player.Gender,Girl)
		@Player.wearskin(May)
		@Player.setrivalname(Brendan)
:endwhen

@Text.show(All right.~What's your name?*You're <Player.name> who's moving to my~hometown of LITTLEROOT.*I get it now!)

:while:<Entity.opacity(14)>>0
	@Entity.setopacity(14,<Entity.opacity(14)>-10)
	@Level.wait(1)
	@Level.update
:endwhile

@Text.show(All right, are you ready?*Your very own adventure is about~to unfold.*Take courage, and leap into the~world of POKéMON where dreams,~adventure, and friendships await!*Well, I'll be expecting you later.~Come see me in my POKéMON LAB.)

:while:<Entity.opacity(13)>>0
	@Entity.setopacity(13,<Entity.opacity(13)>-10)
	@Level.wait(1)
	@Level.update
:endwhile
:while:<Entity.opacity(12)>>0
	@Entity.setopacity(12,<Entity.opacity(12)>-10)
	@Level.wait(1)
	@Level.update
:endwhile
:while:<Entity.opacity(11)>>0
	@Entity.setopacity(11,<Entity.opacity(11)>-10)
	@Level.wait(1)
	@Level.update
:endwhile
:while:<Entity.opacity(2)>>0
	@Entity.setopacity(2,<Entity.opacity(2)>-10)
	@Level.wait(1)
	@Level.update
:endwhile

# Start Game
:if:<Register.value(Pokémon Delta Emerald.Player.Gender)>=Boy
	@Player.warp(Pokémon Delta Emerald\LittleRootTown\LittleRootTown.Truck.Boy.dat,2,0.1,3,0)
:endif

:if:<Register.value(Pokémon Delta Emerald.Player.Gender)>=Girl
	
:endif
:end
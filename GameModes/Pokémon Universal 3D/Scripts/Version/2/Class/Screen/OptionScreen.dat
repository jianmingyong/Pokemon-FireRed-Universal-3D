version=2
##############################
# Sub Screen.OptionScreen
##############################

@Storage.set(str,StackTrace.Set,Version\2\Class\Screen\OptionScreen.dat)
@Script.start(Version\2\Class\StackTrace\Set)

:if:<Storage.get(bool,Security.FileValidation.Checks)>=true
	@Storage.set(bool,Security.FileValidation.ScriptExist,true)
	:end
:endif

@Storage.set(bool,i,true)

:while:<Storage.get(bool,i)>=true
	:if:<Register.value(Global.Token)>=English
		@Text.show(Choose an option to change.)
		@Options.setcancelindex(3)
		@Options.show(Sandbox Mode [<Register.value(Global.SandBoxMode)>],3D Building [<Register.value(Global.3DBuildings)>],Language [<Register.value(Global.Token)>],Back)
		:when:Sandbox Mode [true]
			@Register.change(Global.SandBoxMode,false)
		:when:Sandbox Mode [false]
			@Register.change(Global.SandBoxMode,true)
		:when:3D Building [true]
			@Register.change(Global.3DBuildings,false)
		:when:3D Building [false]
			@Register.change(Global.3DBuildings,true)
		:when:Language [<Register.value(Global.Token)>]
			@Options.setcancelindex(1)
			@Options.show(<Storage.get(str,Localization.Main.Language)>,Back)
			:when:English
				@Register.change(Global.Token,English)
			:endwhen
			@Script.start(Version\2\Class\Localization\<Register.value(Global.Token)>)
			@Script.start(Version\2\Class\Screen\OptionScreen)
		:when:Back
			@Player.save
			:exitwhile
		:endwhen
	:else
		@Text.show(<Storage.get(str,Localization.Version\2\Class\Screen\OptionScreen.1)>)
		@Options.setcancelindex(3)
		@Options.show(<Storage.get(str,Localization.Version\2\Class\Screen\OptionScreen.2)> [<Register.value(Global.SandBoxMode)>],<Storage.get(str,Localization.Version\2\Class\Screen\OptionScreen.3)> [<Register.value(Global.3DBuildings)>],<Storage.get(str,Localization.Version\2\Class\Screen\OptionScreen.4)> [<Register.value(Global.Token)>],<Storage.get(str,Localization.Version\2\Class\Screen\OptionScreen.5)>)
		:when:<Storage.get(str,Localization.Version\2\Class\Screen\OptionScreen.2)> [true]
			@Register.change(Global.SandBoxMode,false)
		:when:<Storage.get(str,Localization.Version\2\Class\Screen\OptionScreen.2)> [false]
			@Register.change(Global.SandBoxMode,true)
		:when:<Storage.get(str,Localization.Version\2\Class\Screen\OptionScreen.3)> [true]
			@Register.change(Global.3DBuildings,false)
		:when:<Storage.get(str,Localization.Version\2\Class\Screen\OptionScreen.3)> [false]
			@Register.change(Global.3DBuildings,true)
		:when:<Storage.get(str,Localization.Version\2\Class\Screen\OptionScreen.4)> [<Register.value(Global.Token)>]
			@Options.setcancelindex(1)
			@Options.show(<Storage.get(str,Localization.Main.Language)>,Back)
			:when:English
				@Register.change(Global.Token,English)
			:endwhen
			@Script.start(Version\2\Class\Localization\<Register.value(Global.Token)>)
			@Script.start(Version\2\Class\Localization\English)
			@Script.start(Version\2\Class\Screen\OptionScreen)
		:when:<Storage.get(str,Localization.Version\2\Class\Screen\OptionScreen.5)>
			@Player.save
			:exitwhile
		:endwhen
	:endif
:endwhile
@Script.start(Version\2\Class\Screen\TitleScreen)
:end
version=2
##############################
# Sub Screen.OptionScreen
##############################

@Storage.set(str,StackTrace.Set,Version\2\Class\Screen\<Register.value(Global.Token)>\OptionScreen.dat)
@Script.start(Version\2\Class\StackTrace\Set)

:if:<Storage.get(bool,Security.FileValidation.Checks)>=true
	@Storage.set(bool,Security.FileValidation.ScriptExist,true)
	:end
:endif

@Storage.set(bool,i,true)

:while:<Storage.get(bool,i)>=true
	@Text.show(Choose an option to change.)
	@Options.setcancelindex(3)
	@Options.show(Sandbox Mode [<Register.value(Global.SandBoxMode)>],3D Building [<Register.value(Global.3DBuildings)>],Language [<Register.value(Global.Token)>],Back)
	:when:Sandbox Mode [true]
		@Register.change(Global.SandBoxMode,false)
	:when:Sandbox Mode [false]
		@Register.change(Global.SandBoxMode,true)
	:when:3D Building [true]
		@Register.change(Global.3DBuildings,false)
	:when:3D Building [false]
		@Register.change(Global.3DBuildings,true)
	:when:Language [<Register.value(Global.Token)>]
		@Options.setcancelindex(1)
		@Options.show(<Storage.get(str,Global.Language)>,Back)
		:when:English
			@Register.change(Global.Token,English)
		:endwhen
		@Script.start(Version\2\Class\Screen\<Register.value(Global.Token)>\OptionScreen)
	:when:Back
		@Player.save
		:exitwhile
	:endwhen
:endwhile
@Script.start(Version\2\Class\Screen\<Register.value(Global.Token)>\TitleScreen)
:end